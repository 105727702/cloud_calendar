<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:MyAvaloniaApp.ViewModels"
        xmlns:models="using:MyAvaloniaApp.Models"
        xmlns:converters="using:MyAvaloniaApp.Converters"
        xmlns:views="using:MyAvaloniaApp.Views"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
        x:Class="MyAvaloniaApp.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Task Manager - Qu·∫£n l√Ω c√¥ng vi·ªác"
        MinWidth="1100" MinHeight="700"
        Width="1200" Height="800">
        
    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Window.Resources>
        <converters:BooleanToColorConverter x:Key="BooleanToColorConverter"/>
        <converters:BooleanToWarningTextConverter x:Key="BooleanToWarningTextConverter"/>
        <converters:TaskWarningColorConverter x:Key="TaskWarningColorConverter"/>
        <converters:TaskWarningTextConverter x:Key="TaskWarningTextConverter"/>
    </Window.Resources>

    <Grid>
        <!-- Main Application Content - Only show when not in Dashboard -->
        <Grid IsVisible="{Binding IsMainViewVisible}">
            <!-- Main Content with Logout Button -->
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto" MinHeight="200"/>
                    <RowDefinition Height="*" MinHeight="300"/>
                </Grid.RowDefinitions>

                <!-- Logout Button Row - Separate row at top -->
                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Spacing="10">
                        <!-- Admin Panel Button -->
                        <Button Content="üîß Qu·∫£n l√Ω Admin" 
                               Command="{Binding OpenUserManagementCommand}"
                               Background="#9C27B0" 
                               Foreground="White" 
                               BorderThickness="0"
                               Padding="15,8"
                               FontWeight="SemiBold"
                               IsVisible="{Binding IsAdmin}"/>
                        
                        <!-- Dashboard Button -->
                        <Button Content="üìä Dashboard" 
                               Command="{Binding OpenDashboardCommand}"
                               Background="#2E7D32" 
                               Foreground="White" 
                               BorderThickness="0"
                               Padding="15,8"
                               FontWeight="SemiBold"/>
                    </StackPanel>
                    
                    <!-- Logout Button (Right) -->
                    <Button Content="ƒêƒÉng xu·∫•t" 
                           Command="{Binding LogoutCommand}"
                           Background="#F44336" 
                           Foreground="White" 
                           BorderThickness="0"
                           Padding="15,8"
                           HorizontalAlignment="Right"
                           FontWeight="SemiBold"/>
                </Grid>

            <!-- Form th√™m/s·ª≠a c√¥ng vi·ªác -->
            <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Row 0: Title -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="T√™n c√¥ng vi·ªác:" VerticalAlignment="Center" Margin="0,0,10,10"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" Text="{Binding Title}" Margin="0,0,0,10"/>

                    <!-- Row 1: Description -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="M√¥ t·∫£:" VerticalAlignment="Top" Margin="0,0,10,10"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Text="{Binding Description}" 
                             AcceptsReturn="True" Height="60" Margin="0,0,0,10"/>

                    <!-- Row 2: Deadline Date -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Ng√†y deadline:" VerticalAlignment="Center" Margin="0,0,10,10"/>
                    <DatePicker Grid.Row="2" Grid.Column="1" SelectedDate="{Binding DeadlineDate}" Margin="0,0,10,10"/>
                    
                    <TextBlock Grid.Row="2" Grid.Column="2" Text="Tr·∫°ng th√°i:" VerticalAlignment="Center" Margin="0,0,10,10"/>
                    <ComboBox Grid.Row="2" Grid.Column="3" SelectedIndex="{Binding SelectedStatus}" Margin="0,0,0,10">
                        <ComboBoxItem>Ch∆∞a l√†m</ComboBoxItem>
                        <ComboBoxItem>ƒêang l√†m</ComboBoxItem>
                        <ComboBoxItem>Ho√†n th√†nh</ComboBoxItem>
                    </ComboBox>

                    <!-- Row 3: Deadline Time -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Gi·ªù deadline:" VerticalAlignment="Center" Margin="0,0,10,10"/>
                    <TimePicker Grid.Row="3" Grid.Column="1" SelectedTime="{Binding DeadlineTime}" 
                                ClockIdentifier="24HourClock" Margin="0,0,10,10"/>

                    <!-- Row 4: Buttons -->
                    <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="4" Orientation="Horizontal" Margin="0,10,0,0">
                        <Button Content="Th√™m" Command="{Binding AddTaskCommand}" Margin="0,0,10,0" Padding="10,5"/>
                        <Button Content="S·ª≠a" Command="{Binding UpdateTaskCommand}" Margin="0,0,10,0" Padding="10,5"/>
                        <Button Content="X√≥a" Command="{Binding DeleteTaskCommand}" Margin="0,0,10,0" Padding="10,5"/>
                        <Button Content="L√†m m·ªõi" Command="{Binding ClearFormCommand}" Margin="0,0,10,0" Padding="10,5"/>
                        <Button Content="Ki·ªÉm tra deadline" Command="{Binding CheckDeadlinesCommand}" Margin="0,0,10,0" Padding="10,5" Background="Orange"/>
                        <Button Content="Reset ID (Gi·ªØ d·ªØ li·ªáu)" Command="{Binding ResetTaskIdCommand}" Margin="0,0,10,0" Padding="10,5" Background="Green" Foreground="White"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Danh s√°ch c√¥ng vi·ªác - Calendar View -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Filter and View Toggle -->
                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="L·ªçc theo tr·∫°ng th√°i:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox Grid.Column="1" ItemsSource="{Binding StatusFilterOptions}" 
                              SelectedItem="{Binding StatusFilter}" 
                              Width="150"/>
                    
                    <!-- View Toggle Buttons -->
                    <StackPanel Grid.Column="3" Orientation="Horizontal">
                        <Button Content="üìÖ L·ªãch tu·∫ßn" Name="CalendarViewButton" Padding="10,5" Margin="0,0,5,0" 
                                Background="#007bff" Foreground="White"/>
                        <Button Content="üìã Danh s√°ch" Name="ListViewButton" Padding="10,5"
                                Background="#6c757d" Foreground="White"/>
                    </StackPanel>
                </Grid>

                <!-- Calendar View -->
                <views:CalendarView Grid.Row="1" Name="CalendarViewControl" 
                                  DataContext="{Binding}" />

                <!-- List View (Hidden by default) -->
                <DataGrid Grid.Row="1" Name="TaskListView"
                          ItemsSource="{Binding FilteredTasks}"
                          SelectedItem="{Binding SelectedTask}"
                          AutoGenerateColumns="False"
                          CanUserReorderColumns="True"
                          CanUserResizeColumns="True"
                          GridLinesVisibility="All"
                          IsReadOnly="True"
                          RowHeight="50"
                          HeadersVisibility="Column"
                          IsVisible="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80" MinWidth="60"/>
                        <DataGridTemplateColumn Header="T√™n c√¥ng vi·ªác" Width="300" MinWidth="250">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate DataType="models:TaskItem">
                                    <TextBlock Text="{Binding Title}" 
                                               TextWrapping="Wrap" 
                                               VerticalAlignment="Center"
                                               Margin="5,2"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="M√¥ t·∫£" Width="350" MinWidth="300">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate DataType="models:TaskItem">
                                    <TextBlock Text="{Binding Description}" 
                                               TextWrapping="Wrap" 
                                               VerticalAlignment="Center"
                                               Margin="5,2"
                                               MaxHeight="60"
                                               TextTrimming="CharacterEllipsis"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Deadline" Binding="{Binding Deadline, StringFormat=dd/MM/yyyy HH:mm}" Width="180" MinWidth="160"/>
                        <DataGridTextColumn Header="Tr·∫°ng th√°i" Binding="{Binding StatusText}" Width="120" MinWidth="100"/>
                        <DataGridTemplateColumn Header="C·∫£nh b√°o" Width="130" MinWidth="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate DataType="models:TaskItem">
                                    <Border Background="{Binding ., Converter={StaticResource TaskWarningColorConverter}}"
                                            CornerRadius="3" Padding="5,2" Margin="2">
                                        <TextBlock Text="{Binding ., Converter={StaticResource TaskWarningTextConverter}}"
                                                   Foreground="White" HorizontalAlignment="Center"
                                                   FontSize="11"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
            </Grid>
        </Grid>
        
        <!-- Dashboard View - Only show when in Dashboard mode -->
        <ContentControl Content="{Binding CurrentView}" 
                       IsVisible="{Binding IsDashboardVisible}">
            <ContentControl.DataTemplates>
                <DataTemplate DataType="vm:DashboardViewModel">
                    <views:DashboardView/>
                </DataTemplate>
            </ContentControl.DataTemplates>
        </ContentControl>
        
        <!-- Notification Panel - Overlay on top of everything -->
        <views:NotificationPanel 
            DataContext="{Binding}"
            HorizontalAlignment="Right" 
            VerticalAlignment="Top"
            Width="400" 
            Margin="20,70,20,20"
            IsHitTestVisible="{Binding HasNotifications}"
            ZIndex="9999"/>
    </Grid>
</Window>
