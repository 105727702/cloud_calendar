<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:MyAvaloniaApp.ViewModels"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
        x:Class="MyAvaloniaApp.Views.PasswordResetDialog"
        x:DataType="vm:PasswordResetViewModel"
        Title="Đặt lại mật khẩu"
        Width="450" Height="450"
        MinWidth="400" MinHeight="450"
        MaxWidth="500" MaxHeight="450"
        WindowStartupLocation="CenterOwner"
        CanResize="False">

    <Design.DataContext>
        <vm:PasswordResetViewModel/>
    </Design.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="ĐẶT LẠI MẬT KHẨU" 
                      FontSize="18" 
                      FontWeight="Bold" 
                      HorizontalAlignment="Center"
                      Foreground="#2196F3"/>
            <TextBlock Text="{Binding UserName, StringFormat='Người dùng: {0}'}" 
                      FontSize="14" 
                      HorizontalAlignment="Center"
                      Foreground="Gray"
                      Margin="0,5,0,0"/>
        </StackPanel>

        <!-- New Password -->
        <StackPanel Grid.Row="1" Spacing="8" Margin="0,0,0,15">
            <TextBlock Text="Mật khẩu mới:" FontWeight="SemiBold"/>
            <TextBox Text="{Binding NewPassword}" 
                    PasswordChar="*"
                    Watermark="Nhập mật khẩu mới"
                    Height="35"/>
        </StackPanel>

        <!-- Confirm Password -->
        <StackPanel Grid.Row="2" Spacing="8" Margin="0,0,0,15">
            <TextBlock Text="Xác nhận mật khẩu:" FontWeight="SemiBold"/>
            <TextBox Text="{Binding ConfirmPassword}" 
                    PasswordChar="*"
                    Watermark="Nhập lại mật khẩu mới"
                    Height="35"/>
        </StackPanel>

        <!-- Password Requirements -->
        <Border Grid.Row="3" Background="#F03434" CornerRadius="5" Padding="10" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Yêu cầu mật khẩu:" FontWeight="SemiBold" FontSize="12"/>
                <TextBlock Text="• Ít nhất 6 ký tự" FontSize="11" Foreground="Gray"/>
                <TextBlock Text="• Không được để trống" FontSize="11" Foreground="Gray"/>
            </StackPanel>
        </Border>

        <!-- Error Message -->
        <TextBlock Grid.Row="4" 
                  Text="{Binding ErrorMessage}" 
                  Foreground="Red" 
                  FontSize="12"
                  TextWrapping="Wrap"
                  IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                  Margin="0,0,0,15"/>

        <!-- Loading Indicator -->
        <TextBlock Grid.Row="5" 
                  Text="Đang xử lý..." 
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  FontStyle="Italic"
                  Foreground="#2196F3"
                  IsVisible="{Binding IsLoading}"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="15">
            <Button Content="Hoàn thành"
                   Command="{Binding ResetPasswordCommand}"
                   Background="#4CAF50"
                   Foreground="White"
                   Padding="20,8"
                   FontWeight="SemiBold"
                   IsEnabled="{Binding !IsLoading}"/>
            
            <Button Content="Hủy"
                   Command="{Binding CancelCommand}"
                   Background="Gray"
                   Foreground="White"
                   Padding="20,8"
                   FontWeight="SemiBold"
                   IsEnabled="{Binding !IsLoading}"/>
        </StackPanel>
    </Grid>
</Window>
