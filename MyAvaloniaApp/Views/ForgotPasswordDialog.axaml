<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="250"
        x:Class="MyAvaloniaApp.Views.ForgotPasswordDialog"
        Title="Forgot Password"
        Width="450" Height="300"
        MinWidth="400" MinHeight="250"
        MaxWidth="500" MaxHeight="300"
        WindowStartupLocation="CenterOwner"
        CanResize="False">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="FORGOT PASSWORD" 
                      FontSize="18" 
                      FontWeight="Bold" 
                      HorizontalAlignment="Center"
                      Foreground="#2196F3"/>
            <TextBlock Text="Enter your username to reset password" 
                      FontSize="12" 
                      HorizontalAlignment="Center"
                      Foreground="Gray"
                      Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Username Input -->
        <StackPanel Grid.Row="1" Spacing="8" Margin="0,0,0,15">
            <TextBlock Text="Username:" FontWeight="SemiBold"/>
            <TextBox x:Name="UsernameTextBox" 
                    Watermark="Enter your username"
                    Height="35"/>
        </StackPanel>

        <!-- Info Message -->
        <Border Grid.Row="2" Background="#E3F2FD" CornerRadius="5" Padding="10" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="ℹ️ Information:" FontWeight="SemiBold" FontSize="12" Foreground="#1976D2"/>
                <TextBlock Text="• Enter your username to proceed with password reset" FontSize="11" Foreground="#1976D2"/>
                <TextBlock Text="• You will be able to set a new password after verification" FontSize="11" Foreground="#1976D2"/>
            </StackPanel>
        </Border>

        <!-- Error Message -->
        <TextBlock Grid.Row="3" 
                  x:Name="ErrorTextBlock"
                  Foreground="Red" 
                  FontSize="12"
                  TextWrapping="Wrap"
                  IsVisible="False"
                  Margin="0,0,0,15"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="15">
            <Button x:Name="ContinueButton"
                   Content="Continue"
                   Background="#4CAF50"
                   Foreground="White"
                   Padding="20,8"
                   FontWeight="SemiBold"
                   Click="ContinueButton_Click"/>
            
            <Button x:Name="CancelButton"
                   Content="Cancel"
                   Background="Gray"
                   Foreground="White"
                   Padding="20,8"
                   FontWeight="SemiBold"
                   Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
