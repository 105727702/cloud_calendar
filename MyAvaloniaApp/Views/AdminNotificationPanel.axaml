<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="MyAvaloniaApp.Views.AdminNotificationPanel">
  
  <Border x:Name="NotificationBorder"
          Background="#4CAF50"
          CornerRadius="8"
          Padding="15"
          Margin="5"
          IsVisible="False"
          BoxShadow="0 2 10 0 #40000000">
    <StackPanel Orientation="Horizontal">
      <TextBlock x:Name="NotificationIcon" 
                 Text="âœ“" 
                 FontSize="18" 
                 FontWeight="Bold"
                 Foreground="White"
                 Margin="0,0,12,0"
                 VerticalAlignment="Center"/>
      <StackPanel>
        <TextBlock x:Name="NotificationTitle" 
                   FontWeight="Bold" 
                   FontSize="15"
                   Foreground="White"/>
        <TextBlock x:Name="NotificationMessage" 
                   FontSize="13" 
                   Foreground="White"
                   TextWrapping="Wrap"
                   Margin="0,2,0,0"/>
      </StackPanel>
    </StackPanel>
  </Border>
  
</UserControl>
